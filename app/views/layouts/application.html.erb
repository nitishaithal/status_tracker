<!DOCTYPE html>
<html>
<head>
  <title>
    StatusApp
  </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Arvo:400,400italic' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<header class="navbar navbar-fixed-top navbar-inverse">


    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><%= link_to "Home", root_path %></li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Project <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>  <%= link_to "View Projects", :action => "add project", :action => "index", :controller => "projects" %></li>
              <li class="divider"></li>
              <li><%= link_to "Create project", :action => "new", :id => current_user.id, :controller => "projects" %></li>
              <li><%= link_to "Add members", :action => "add project", :action => "index", :controller => "projects"%></li>
            </ul>
          </li>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Users <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li> <%= link_to "List of Users",:action => "index"%></li>
              <li class="divider"></li>
               <li><%= link_to "Edit Profile", :action => "edit", :controller => "home" %></li>
                <li><%= link_to "sign out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
			   
      
		<% else %>
			<li><%= link_to "Log in", new_user_session_path %></li>
			<li><%= link_to "sign up", new_user_registration_path %></li>
		<% end %>
      </ul>
    </nav>
  
</header>
<body>
		<%= yield %>
</body>
</html>
