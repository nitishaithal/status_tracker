<%=form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> {:class => 'form'}) do |f| %>
    <div class="modal ">
      <div class="modal-dialog">
        <div class="modal-content col-xs-offset-1 col-xs-10">
          <div class="modal-header">
            <h2 class="modal-title">Sign up</h2>
             <%=devise_error_messages! %>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%=f.label :username,class: "sr-only" %>
                <%=f.text_field :username, autofocus: true,class: "form-control",placeholder: "Username" %>
            </div>
            <div class="form-group">
              <%=f.label :email,class: "sr-only" %>
                <%=f.email_field :email,class: "form-control",placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%=f.label :password,class: "sr-only" %>
                <% if @validatable %>

                  <% end %>
                    <%=f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Password" %>
            </div>
            <div class="form-group">
              <%=f.label :password_confirmation,class: "sr-only" %>
                <%=f.password_field :password_confirmation, autocomplete: "off",class: "form-control",placeholder: "Confirm Password" %>
            </div>
            <div class="modal-footer">
              <%= link_to "Log in", new_user_session_path, class: "btn btn-primary pull-left " %>
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    </div>
 <% end %>
<script>
  $(document).ready(function(){
    $(".modal").modal({
      keyboard: false,
      backdrop: 'static',
      show: true
    });
    $("body").addClass('bg-img')
  });
</script>
