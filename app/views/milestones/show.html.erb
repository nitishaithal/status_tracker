<h1>show page of milestones</h1>

   		<div class ="pull-left">
  		<% @intents.uniq.each do |intent| %>
  		 <%if @milestone.id == intent.milestone_id %>
      <br/>Description: <%= intent.description %><br/>
        <% if intent.status_intent != "Completed" %>
          Status: <%= intent.status_intent %><br/>
          <% end %>
   		<% end %>
  <% end %>
</div>
<div class ="pull-right">
<h1>Intent</h1><h3>
<%= simple_form_for Intent.new do |f| %>
	<%= f.input :description %><br/>

	Status of the Milestone: <%= f.select :status_intent, options_for_select(%w[not_started In_progress Started Completed Problem_occurred])%><br/><br/>
    <%= f.hidden_field :milestone_id, :value => @milestone.id%>
	 <%= f.submit "Submit intent", class: "btn btn-primary", "data-loading-text" => "Submitting...", id: "summernote_post_btn" %>
<% end %>
</h3>
</div>