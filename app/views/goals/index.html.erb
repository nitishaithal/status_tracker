
<div class header>
  <h1> Goals </h1>
</div>
<div class="col-md-8  col-xs-12">
          <%= image_tag(gravatar_url_for(@usr), alt: @usr.email, class: "img-responsive img-thumbnail picture hidden-xs hidden-sm") %>
          <%= image_tag(gravatar_url_for(@usr, "150"), alt: @usr.email, class: "img-responsive img-thumbnail picture_tab visible-sm") %>
          <%= image_tag(gravatar_url_for(@usr, "150"), alt: @usr.email, class: "img-responsive img-thumbnail  visible-xs picture_mob") %>
           <div class="header p15 m-auto mt10">
            <div>
                <span class="span-h2 center"><%= @usr.username.upcase %></span>
            </div>
            <div>
                <span class="span-h4"><%= @usr.email %></span>
            </div>
                <span class="mt10"></span>
           </div>
        
           <% @goals.each do |goal| %>
            <%if goal.user_id==@usr.id and goal.project_id== @project.id%>
           		<h1><%=link_to goal.description, goal %></h1>
            <% end %>

           <% end %>
             <% if @usr.username == current_user.username %>
             <h1><%= link_to "add goals", controller: 'goals', action: 'new', :user_id => @usr.id, :project_id => @project.id%></h1>
            <% end %>
</div>
