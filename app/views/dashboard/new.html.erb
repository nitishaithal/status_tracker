<% provide(:title, @user.username.upcase) %>
<div class="row panel">
		<div class="col-md-4 bg_blur_dash m-auto ">	    
		</div>
  <div class="col-md-8  col-xs-12">
    <%= image_tag(gravatar_url_for(@user), alt: @user.email, class: "img-responsive img-thumbnail picture hidden-xs hidden-sm") %>
    <%= image_tag(gravatar_url_for(@user, "150"), alt: @user.email, class: "img-responsive img-thumbnail picture_tab visible-sm") %>
    <%= image_tag(gravatar_url_for(@user, "150"), alt: @user.email, class: "img-responsive img-thumbnail  visible-xs picture_mob") %>
    <div class="header p15 m-auto mt10">
    	<div class ="spacing">
        <span class="span-h2 center"><%= @user.username.upcase %></span>
     	</div>
     	<div class ="spacing1">
        <span class="span-h4"><%= @user.email %></span>
     	</div>
      <span class="mt10"></span>
    </div>
  </div>
</div>   

			<ul class="list-group">
				<li class="list-group-item group-design">
					<span class="span-h2">Projects</span>
					<a href="#create_project_modal"  data-toggle="modal" class="pull-right btn btn-success glyphicon glyphicon-plus btn-sm btn-outline" ></a>
				</li>
				<% @projects.uniq.each do |project| %>
				 	 <a class="list-group-item" href="<%= project_path(project) %>" ><span class="span-h4"><%= project.title %></span></a>
				<% end %>			
			</ul>
		
<%= render 'projects/form' %>